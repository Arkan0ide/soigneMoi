{% extends 'base.html.twig' %}

{% block title %}Hello SchedulleAdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% for flashMessage in app.flashes('error') %}
        <div class="alert alert-danger">{{ flashMessage }}</div>
    {% endfor %}
    {{ form_start(scheduleForm) }}
    {{ form_row(scheduleForm.doctor) }}

    {{ form_row(scheduleForm.dateTimeBegin) }}
    {{ form_row(scheduleForm.dateTimeEnd) }}
    {{ form_row(scheduleForm.patient) }}


    <button type="submit" class="btn btn-primary my-3" {{ app.user ? '' : 'disabled' }}>Valider</button>

    {{ form_end(scheduleForm) }}
</div>
{% endblock %}
